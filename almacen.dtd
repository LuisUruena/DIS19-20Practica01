	<¡ELEMENT linea_pedido(codigo,cantidad)>
	<¡ELEMENT cantidad(#PCDATA)>
	<¡ELEMENT destinatario(#PCDATA)>
	<¡ELEMENT fecha_entrega(#PCDATA)>

]>


